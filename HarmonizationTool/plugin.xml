<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="harmonizationtool.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="harmonizationtool.Perspective"
            id="HarmonizationTool.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="harmonizationtool.View"
            id="HarmonizationTool.view"
            name="Data File(s)"
            restorable="true">
      </view>
      <view
            class="harmonizationtool.QueryView"
            id="HarmonizationTool.QueryViewID"
            name="Query"
            restorable="true">
      </view>
      <view
            class="harmonizationtool.ViewData"
            id="HarmonizationTool.viewData"
            name="Data View"
            restorable="true">
      </view>
      <view
            class="harmonizationtool.ResultsView"
            id="HarmonizationTool.ResultsViewID"
            name="Results"
            restorable="true">
      </view>
      <view
            class="harmonizationtool.QueryEditor"
            id="HarmonizationTool.QueryEditorID"
            name="Query Editor"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="HarmonizationTool.view">
         </view>
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="HarmonizationTool.viewData">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="HarmonizationTool.SaveResults"
                  id="HarmonizationTool.SaveResults"
                  label="Save Results"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
         <menu
               label="TDB">
            <command
                  commandId="harmonizationtool.tdb.select.id"
                  label="Select"
                  style="push">
            </command>
         </menu>
         <menu
               label="Window">
            <menu
                  label="Show View">
               <command
                     commandId="HarmonizationTool.ShowDataView"
                     label="Show Data View"
                     style="push">
               </command>
               <command
                     commandId="HarmonizationTool.ShowResultsView"
                     label="Show Results View"
                     style="push">
               </command>
               <command
                     commandId="HarmonizationTool.ShowQueryView"
                     label="Show Query View"
                     style="push">
               </command>
               <command
                     commandId="HarmonizationTool.ShowDataFilesView"
                     label="Show Data File(s) View"
                     style="push">
               </command>
            </menu>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:HarmonizationTool.QueryViewID">
         <command
               commandId="HarmonizationTool.extQueryID"
               label="Query From File"
               style="push"
               tooltip="Run a (read-only) query from a file">
         </command>
         <command
               commandId="HarmonizationTool.extUpdateID"
               label="Update From File"
               style="push"
               tooltip="Run a (delete or insert) update from a file">
         </command>
         <command
               commandId="HarmonizationTool.TDB_Load"
               label="Load TDB from RDF / XML"
               style="push">
         </command>
         <command
               commandId="HarmonizationTool.TDB_Dump"
               label="Dump TDB to RDF/XML"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="HarmonizationTool.application"
            name="Harmonization Tool">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Harmonization Tool">
         </property>
      </product>
   </extension>
   <extension
         id="HarmonizationTool.importTriplesID"
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="harmonizationtool.comands.SelectTDB"
            id="harmonizationtool.tdb.select.id"
            name="SelectTDB">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.ExtQueryHandler"
            id="HarmonizationTool.extQueryID"
            name="ExtQuery">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.ExtUpdateHandler"
            id="HarmonizationTool.extUpdateID"
            name="Ext Update">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.ImportTriplesHandler"
            id="HarmonizationTool.importTriplesID"
            name="Import Triples">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.ExportTriplesHandler"
            id="HarmonizationTool.exportTriplesID"
            name="Export Triples">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.ExportTDBHandler"
            id="HarmonizationTool.TDB_Dump"
            name="TDB Dump">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.ImportTDBHandler"
            id="HarmonizationTool.TDB_Load"
            name="TDB Load">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.SaveResultsHandler"
            id="HarmonizationTool.SaveResults"
            name="Save Results">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.ShowDataViewHandler"
            id="HarmonizationTool.ShowDataView"
            name="Show Data View">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.ShowResultsViewHandler"
            id="HarmonizationTool.ShowResultsView"
            name="Show Results View">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.ShowQueryViewHandler"
            id="HarmonizationTool.ShowQueryView"
            name="Show Query View">
      </command>
      <command
            defaultHandler="harmonizationtool.handler.ShowDataFilesView"
            id="HarmonizationTool.ShowDataFilesView"
            name="Show Data File(s) View">
      </command>
   </extension>

</plugin>
